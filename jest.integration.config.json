{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.jest.json"
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(js|ts|tsx)$",
  "rootDir": "./"
}
